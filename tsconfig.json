{
    "compilerOptions": {
       "lib": [
          "es5",
          "es6"
       ],
       "target": "es6",
       "module": "commonjs",
       "moduleResolution": "node",
       "outDir": "./build",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "sourceMap": true,
       "strict": false,
       "jsx": "react",
       "esModuleInterop": true,
       "skipLibCheck": true,
    },
    "exclude": ["node_modules/*", "build", "config", "doc", "env", "public", "scripts"]
  }